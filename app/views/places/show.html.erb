<div class = "container">
  <div class="row">
    <div class = "pt-3 pb-3">
       <h1><%= @place["name"] %> - My Entries </h1>
    </div>
    

    <% for entry in @entries %>
      <div class="col-sm-6 col-md-4">
        <h5><%= entry["title"] %></h5>
        <h6><%= entry["occurred_on"] %></h6>
        <p><%= entry["description"] %></p>

          <% if entry.uploaded_image.attached? %>
            <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid" style="width: 400px; height: 400px; object-fit: cover;" alt="Standardized Image">
          <% end %>
      </div>
    <% end %>


    <% if session["user_id"] != nil %>
        <div class = "mt-3 mb-3">
          <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-success" >New Entry</a>
        </div>
    <% else %>
        <p> Please log in to add entries </p>
    <% end %>

    <p>
      <a href="/places">Back to All Places</a>
    </p>

  </div>
</div>